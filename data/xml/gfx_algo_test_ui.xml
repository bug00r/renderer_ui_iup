                                <attrs value='TITLE="y:"' />
                            </label>
                            <text name="cy">
                                <attrs value='SPIN="YES",MASK="IUP_MASK_UINT",SPINMAX="1000"' />
                            </text>
                            <label>
                                <attrs value='TITLE="Radius:"' />
                            </label> 
                            <label>
                                <attrs value='TITLE=""' />
                            </label>
                            <text name="cr">
                                <attrs value='SPIN="YES",MASK="IUP_MASK_UINT",SPINMAX="1000"' />
                            </text> 
                        </gridbox>
                        <gridbox>

                            <userdata name="drawtrigger" value="drawellipsetrigger" />

                            <handle name="ex" />
                            <handle name="ey" />
                            <handle name="ea" />
                            <handle name="eb" />
