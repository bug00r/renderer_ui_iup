                            </label>
                            <text name="b2cx">
                                <attrs value='SPIN="YES",MASK="IUP_MASK_UINT",SPINMAX="1000"' />
                            </text>
                            <label>
                                <attrs value='TITLE="y:"' />
                            </label>
                            <text name="b2cy">
                                <attrs value='SPIN="YES",MASK="IUP_MASK_UINT",SPINMAX="1000"' />
                            </text>
                            <label>
                                <attrs value='TITLE="Control-2:"' />
                            </label>
                            <label>
                                <attrs value='TITLE="x:"' />
                            </label>
                            <text name="b2cx2">
                                <attrs value='SPIN="YES",MASK="IUP_MASK_UINT",SPINMAX="1000"' />
                            </text>
                            <label>
                                <attrs value='TITLE="y:"' />
                            </label>
                            <text name="b2cy2">
                                <attrs value='SPIN="YES",MASK="IUP_MASK_UINT",SPINMAX="1000"' />
                            </text>
