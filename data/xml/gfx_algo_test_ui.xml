                            <attr name="GAPLIN" value="5" />
                            <attr name="GAPCOL" value="5" />
                            <attr name="EXPANDCHILDREN" value="HORIZONTAL" />
                            <label>
                                <attrs value='TITLE="Start:"' />
                            </label>
                            <label>
                                <attrs value='TITLE="x:"' />
                            </label>
                            <text name="bsx">
                                <attrs value='SPIN="YES",MASK="IUP_MASK_UINT",SPINMAX="1000"' />
                            </text>
                            <label>
                                <attrs value='TITLE="y:"' />
                            </label>
                            <text name="bsy">
                                <attrs value='SPIN="YES",MASK="IUP_MASK_UINT",SPINMAX="1000"' />
                            </text>
                            <label>
                                <attrs value='TITLE="Control:"' />
                            </label>
                            <label>
                                <attrs value='TITLE="x:"' />
                            </label>
                            <text name="bcx">
                                <attrs value='SPIN="YES",MASK="IUP_MASK_UINT",SPINMAX="1000"' />
                            </text>
                            <label>
                                <attrs value='TITLE="y:"' />
