                            <text name="ey">
                                <attrs value='SPIN="YES",MASK="IUP_MASK_UINT",SPINMAX="1000"' />
                            </text>
                            <label>
                                <attrs value='TITLE="Half Axis:"' />
                            </label>
                            <label>
